<?xml version="1.0" encoding="UTF-8"?>
<sitemesh>
	<!-- 指明满足“/*”的页面，将被“/WEB-INF/views/decorators/decorator.html”所装饰 -->
	<mapping path="/admin/*" decorator="/WEB-INF/decorators/admin/main.jsp" />

	<mapping path="/company/*" decorator="/WEB-INF/decorators/company/main.jsp" />

	<mapping path="/deviceChannel/*" decorator="/WEB-INF/decorators/channel/device/main.jsp" />

	<mapping path="/promotionChannel/*" decorator="/WEB-INF/decorators/channel/promotion/main.jsp" />

	<!-- 指明满足“/exclude.jsp*”的页面，将被排除，不被装饰 -->
	<mapping path="/admin/*.ex*" exclue="true" />
	<mapping path="/company/*.ex*" exclue="true" />
	<mapping path="/admin/login.do*" exclue="true" />
	<mapping path="/admin/logout.do*" exclue="true" />

	<!--<mapping path="/admin/unauthorized.do*" exclue="true" />-->
	<mapping path="/admin/init.do*" exclue="true" />
	<mapping path="/admin/init_result.do*" exclue="true" />

	<mapping path="/company/login.do*" exclue="true" />
	<mapping path="/company/logout.do*" exclue="true" />
	<!--<mapping path="/company/unauthorized.do*" exclue="true" />-->
	<mapping path="/company/member/cardDetail.do*" exclue="true" />

	<mapping path="/deviceChannel/login.do*" exclue="true" />
	<mapping path="/deviceChannel/logout.do*" exclue="true" />

	<mapping path="/promotionChannel/login.do*" exclue="true" />
	<mapping path="/promotionChannel/logout.do*" exclue="true" />

</sitemesh>